<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetShopActivity">

    <TextView
        android:id="@+id/tvPetshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gothic_a1_black"
        android:text="Pet Shop"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="normal" />



    <TextView
        android:id="@+id/tvCatPetShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPetshop"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gothic_a1_black"
        android:text="Cat"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/ibBuyCat"
        android:layout_width="168dp"
        android:layout_height="186dp"
        android:layout_below="@+id/tvCatPetShop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/cat_petshop" />

    <ImageView
        android:id="@+id/ivHeartCat"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tvCatPetShop"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/heart" />

    <TextView
        android:id="@+id/tvCat100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCatPetShop"
        android:layout_marginStart="10dp"
        android:layout_marginTop="147dp"
        android:layout_toEndOf="@+id/ivHeartCat"
        android:fontFamily="@font/archivo"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <!--    start of dog-->

    <TextView
        android:id="@+id/tvDogPetShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPetshop"
        android:layout_marginStart="156dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tvCatPetShop"
        android:fontFamily="@font/gothic_a1_black"
        android:text="Dog"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/ibBuyDog"
        android:layout_width="169dp"
        android:layout_height="187dp"
        android:layout_below="@+id/tvDogPetShop"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="34dp"
        android:layout_toEndOf="@+id/ibBuyCat"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/dog_petshop" />

    <ImageView
        android:id="@+id/ivHeartDog"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tvCatPetShop"
        android:layout_marginStart="117dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/tvCat100"
        android:src="@drawable/heart" />

    <TextView
        android:id="@+id/tvDog100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCatPetShop"
        android:layout_marginStart="11dp"
        android:layout_marginTop="147dp"
        android:layout_toEndOf="@+id/ivHeartDog"
        android:fontFamily="@font/archivo"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <!--    start of parrot-->

    <TextView
        android:id="@+id/tvParrotPetShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibBuyCat"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gothic_a1_black"
        android:text="Parrot"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/ibBuyParrot"
        android:layout_width="168dp"
        android:layout_height="186dp"
        android:layout_below="@+id/tvParrotPetShop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="2dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/parrot_petshop" />

    <ImageView
        android:id="@+id/ivHeartParrot"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tvParrotPetShop"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/heart" />

    <TextView
        android:id="@+id/tvParrot100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvParrotPetShop"
        android:layout_marginStart="14dp"
        android:layout_marginTop="147dp"
        android:layout_toEndOf="@+id/ivHeartParrot"
        android:fontFamily="@font/archivo"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <!--    coming soon-->

    <TextView
        android:id="@+id/tvComingPetShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibBuyDog"
        android:layout_marginStart="137dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/tvParrotPetShop"
        android:fontFamily="@font/gothic_a1_black"
        android:text="Coming Soon"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/ibBuyComing"
        android:layout_width="169dp"
        android:layout_height="187dp"
        android:layout_below="@+id/ibBuyDog"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/ibBuyParrot"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/comingsoon_petshop" />

    <ImageView
        android:id="@+id/ivHeartComing"
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:layout_below="@+id/tvParrotPetShop"
        android:layout_marginStart="117dp"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/tvParrot100"
        android:src="@drawable/heart" />

    <TextView
        android:id="@+id/tvComingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvParrotPetShop"
        android:layout_marginStart="11dp"
        android:layout_marginTop="147dp"
        android:layout_toEndOf="@+id/ivHeartDog"
        android:fontFamily="@font/archivo"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvHeartsUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/tvPetshop"
        android:background="@drawable/user_hearts_box"
        android:fontFamily="@font/archivo"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingLeft="27dp"
        android:paddingBottom="2dp"
        android:text="10000"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/ivUserHeart"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_alignStart="@+id/tvHeartsUser"
        android:layout_alignTop="@+id/tvHeartsUser"
        android:layout_alignEnd="@+id/tvHeartsUser"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/heart" />

</RelativeLayout>